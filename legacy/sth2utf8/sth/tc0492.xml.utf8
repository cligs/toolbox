		<front>
			<docTitle>
				<titlePart type="main">LES FOLIES AMOUREUSES</titlePart>
				<titlePart type="sub">COMÉDIE</titlePart>
			</docTitle> 
			<docDate value="1696">M. DC. XVIV.</docDate>
			<docAuthor id="REGNARD, Jean-Francois" bio='regnard'>Jean-François Regnard</docAuthor>

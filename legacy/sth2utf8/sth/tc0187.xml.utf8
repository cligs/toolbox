			<titlePart type="sub">COMÉDIE</titlePart>
		</docTitle> 
		<docDate value='1694'>M. DC. XCIV. AVEC PRIVILÈGE DU ROI.</docDate>
		<docAuthor id='DANCOURT, Florent Carton dit' bio='dancourt'>De Mr DANCOURT</docAuthor>

			<castItem><role id="MONSIEUR GRIFFARD" civil='M' type="H" statut="financier" age="A" stat_amour='néant'>MONSIEUR GRIFFARD</role>, Financier.</castItem>
			<castItem><role id="MARIANE" civil='F' type="H" statut="bourgeois" age="A" stat_amour='néant'>MARIANE</role>, fille de Monsieur Griffard.</castItem>
			<castItem><role id="CHOUCHETTE" civil='F' type="H" statut="bourgeois" age="J" stat_amour='néant'>CHOUCHETTE</role>, filleule de Monsieur Griffard.</castItem>

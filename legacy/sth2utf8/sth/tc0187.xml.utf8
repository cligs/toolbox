			<castItem><role id="ÉRASTE" civil='M' type="H" statut="bourgeois" age="A" stat_amour='néant'>ÉRASTE</role>, Amant de Mariane.</castItem>
			<castItem><role id="MADAME ARGANTE" civil='F' type="H" statut="bourgeois" age="A" stat_amour='néant'>MADAME ARGANTE</role>, vieille Coquette, Amoureuse dÉraste.</castItem>
			<castItem><role id="FROSINE" civil='F' type="H" statut="bourgeois" age="A" stat_amour='néant'>FROSINE</role>, intrigante.</castItem>
			<castItem><role id="LOLIVE" civil='M' type="H" statut="valet" age="A" stat_amour='néant'>LOLIVE</role>, Valet dÉraste.</castItem>
			<castItem><role id="LE TABELLION" civil='M' type="H" statut="notaire" age="A" stat_amour='néant'>LE TABELLION</role>.</castItem>
			<castItem><role id="LE NOURRICIER" civil='M' type="H" statut="bourgeois" age="A" stat_amour='néant'>LE NOURRICIER</role>.</castItem>

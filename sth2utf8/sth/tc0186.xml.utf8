	<front>
		<docTitle>
			<titlePart type="main">LA FÊTE DE VILLAGE.</titlePart>
			<titlePart type="sub">COMÉDIE</titlePart>
		</docTitle> 
		<docDate value='1700'>M. DCC. AVEC PRIVILÈGE DU ROI.</docDate>
		<docAuthor id='DANCOURT, Florent Carton dit' bio='dancourt'>De Mr DANCOURT</docAuthor>

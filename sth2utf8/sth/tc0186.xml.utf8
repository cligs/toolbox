			<castItem><role id='MADAME CARMIN' civil='F' type="H" statut="bourgeois" age="A" stat_amour='néant'>MADAME CARMIN</role>.</castItem>
			<castItem><role id='ANGÉLIQUE' civil='F' type="H" statut="bourgeois" age="A" stat_amour='Le Comte'>ANGÉLIQUE</role>, amoureuse du Comte.</castItem>
			<castItem><role id='LISETTE' civil='F' type="H" statut="suivante" age="A" stat_amour='néant'>LISETTE</role>.</castItem>

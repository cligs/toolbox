	<front>
		<docTitle>
			<titlePart type='main'>LE PRINCE TRAVESTI</titlePart>
			<titlePart type='sub'>ou L'ILLUSTRE AVENTURIER</titlePart>
			<titlePart type='sub'>COMÉDIE</titlePart>
		</docTitle> 
		<docDate value='1727'>M. DCC. XXVII. avec PRIVILÈGE et APPROBATION</docDate>
		<docAuthor id='MARIVAUX' bio='marivaux'>MARIVAUX</docAuthor>

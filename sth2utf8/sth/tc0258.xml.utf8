<text>
	<front>
		<docTitle>
			<titlePart type="main">L'ANGLAIS À BORDEAUX</titlePart>
			<titlePart type="sub">COMÉDIE</titlePart>
		</docTitle> 
		<docDate value='1743'>MD CC LXXXXV.</docDate>
		<docAuthor id="FAVART, Charles-Simon" bio='favart'>de M. FAVART</docAuthor>

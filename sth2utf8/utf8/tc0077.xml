	<castList><head>PERSONNAGES</head>

		<castItem><role id="MONSIEUR TROTBERG" civil='M' type="H" statut="banquier" age="A" stat_amour='néant'>MONSIEUR TROTBERG</role>, Banquier Allemand..</castItem>

		<castItem><role id="MONSIEUR DUBREUIL" civil='M' type="H" statut="banquier" age="A" stat_amour='néant'>MONSIEUR DUBREUIL</role>, Banquier Français.</castItem>

		<castItem><role id="MONSIEUR DUBREUIL" civil='M'  type="H" statut="bourgeois" age="A" stat_amour='néant'>MONSIEUR DUBREUIL Fils</role>.</castItem>

		<castItem><role id="LAPIERRE" civil='M' type="H" statut="laquais" age="A" stat_amour='néant'>LAPIERRE</role>, Laquais de M. Dubreuil.</castItem>

